generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  CLIENT
  EMPLOYEE
}

enum EmployeeRole {
  MARKETER
  DEVELOPER
  UX_UI_DESIGNER
}

model User {
  id           String        @id @default(uuid())
  clerkUserId  String?       @unique
  activated    Boolean       @default(false)
  email        String        @unique
  role         Role
  employeeRole EmployeeRole?
  bio          String?       @db.Text
  firstName    String?
  lastName     String?
  imageUrl     String?
  adress       String?       @db.Text
  username     String?       @unique
  phoneNumber  String?       @db.Text

  leaderOfProjects Project[] @relation("teamLeader")

  clientOfProjects Project[] @relation("client")

  projects Project[]
  chats    Chat[]
  messages Message[]

  cards Card[]

  createdCards Card[] @relation("createdBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Stat {
  notStarted
  inProgress
  completed
}

model Project {
  id             String    @id @default(uuid())
  title          String
  description    String?
  projectDetails String?
  from           DateTime?
  to             DateTime?
  stat           Stat      @default(notStarted)
  imageUrl       String?

  teamLeaderId String
  teamLeader   User   @relation(fields: [teamLeaderId], references: [id], onDelete: Cascade, name: "teamLeader")

  clientId String
  client   User   @relation(fields: [clientId], references: [id], onDelete: Cascade, name: "client")

  assignedTo User[]
  steps      Step[]
  messages   Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Step {
  id        String  @id @default(uuid())
  title     String
  completed Boolean

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id String @id @default(uuid())

  users    User[] //will contain only two users
  messages Message[]
}

model Message {
  id       String           @id @default(uuid())
  contents MessageContent[]

  fromId String
  from   User   @relation(fields: [fromId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  chatId String?
  chat   Chat?   @relation(fields: [chatId], references: [id], onDelete: Cascade)

  deleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MessageContentType {
  text
  video
  image
  audio
  pdf
}

model MessageContent {
  id      String             @id @default(uuid())
  type    MessageContentType
  name    String?
  content String             @db.Text

  messageId String
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Card {
  id String @id @default(uuid())

  title       String
  TitleStates Json
  startDate   DateTime
  endDate     DateTime
  description String
  links       Json?
  imageUrl    String?
  priority    Priority
  order       Int
  listId      String
  labels      Json?

  assignedTo User[]

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id], onDelete: Cascade, name: "createdBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
